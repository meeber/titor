{
  "name": "titor",
  "version": "0.0.0",
  "description": "package assistant",
  "author": "Grant Snodgrass <meeber@gametypething.com>",
  "license": "MIT",
  "repository": "meeber/titor",
  "main": "index.js",
  "engines": {
    "node": ">=0.12.0"
  },
  "scripts": {
    "lint": "eslint --fix .",
    "test": "npm run test-src-unit && npm run lint",
    "test-src": "npm run test-src-unit && npm run test-src-integration",
    "test-src-integration": "BABEL_ENV=current mocha --recursive -r babel-core/register src/test/integration",
    "test-src-unit": "BABEL_ENV=current mocha --recursive -r babel-core/register src/test/unit"
  },
  "devDependencies": {
    "babel-core": "^6.9.1",
    "babel-eslint": "^6.0.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "eslint": "^2.11.1",
    "eslint-config-tt": "^1.5.1",
    "mocha": "^2.5.3",
    "shelljs": "^0.7.0",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0"
  }
}
